<div class="dashboard">
  <div class="sidebar">
    <h2>Your Folders</h2>
    <% if (folders && folders.length > 0) { %>
    <ul>
      <% folders.forEach(folder => { %>
      <li>
        <a href="/folders/<%= folder.id %>"><%= folder.name %></a>
        <form action="/folders/<%= folder.id %>/delete" method="POST">
          <button type="submit" onclick="return confirm('Delete this folder?')">
            ğŸ—‘ï¸
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No folders yet. Create one above!</p>
    <% } %>
  </div>

  <div class="main-content">
    <% if (currentFolder) { %>
    <h3>Files in <%= currentFolder.name %></h3>
    <% if (currentFolder.files.length > 0) { %>
    <ul>
      <% currentFolder.files.forEach(file => { %>
      <li>
        <a href="/folders/<%= currentFolder.id %>/<%= file.id %>"
          ><%= file.fileName %></a
        >

        <form
          action="/folders/<%= currentFolder.id %>/<%= file.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button type="submit" onclick="return confirm('Delete this file?')">
            ğŸ—‘ï¸
          </button>
        </form>
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No files in this folder yet.</p>
    <% } %> <% } else { %>
    <p>Select a folder to see its files.</p>
    <% } %>
  </div>
</div>
